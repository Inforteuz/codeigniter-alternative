# =======================
# DATABASE CONFIGURATION
# =======================
# DB_HOST=localhost
# DB_NAME=performance_schema
# DB_USER=root
# DB_PASS=
# DB_CHARSET=utf8mb4

# =======================
# APPLICATION SETTINGS
# =======================
# APP_NAME="MyProject"
# APP_ENV=development
# APP_MAINTENANCE=false
# APP_DEBUG=true
# APP_URL=http://localhost:8000
# TIMEZONE=Asia/Tashkent

# =======================
# SESSION SETTINGS
# =======================
# SESSION_DRIVER=file
# SESSION_LIFETIME=120

# =======================
# SECURITY SETTINGS
# =======================
# CSRF Token settings
# CSRF_TOKEN_NAME=csrf_token
# CSRF_TOKEN_TIME_NAME=csrf_token_time
# CSRF_TOKEN_LIFETIME=3600 # 1 hour (second)

# =======================
# LOGGING SETTINGS
# =======================
# LOG_CHANNEL=file
# LOG_LEVEL=debug

# =======================
# CACHE SETTINGS
# =======================
# CACHE_DRIVER=file
# CACHE_TTL=3600 # 1 hour (second)
# CACHE_PREFIX=ci4_

# =======================
# FILE UPLOAD SETTINGS
# =======================
# UPLOAD_MAX_SIZE=10485760 # 10MB (byte)
# UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# =======================
# OTHER SETTINGS
# =======================
# DEBUG_MODE=true
# MAINTENANCE_MODE=false
